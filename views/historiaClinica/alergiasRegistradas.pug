.accordion-item
    h2.accordion-header
      button.accordion-button.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#panelsStayOpen-collapseThree' aria-expanded='false' aria-controls='panelsStayOpen-collapseThree')
        | Alergias
    #panelsStayOpen-collapseThree.accordion-collapse.collapse
      .accordion-body
        table.table.table.sm 
          thead
            tr
              th(scope='col') Nombre 
              th(scope='col') Fecha desde 
              th(scope='col') Fecha hasta 
              th(scope='col') Importacia
          tbody
            tr
              each alergia in alergias 
                td #{alergia.nombre}
                td #{alergia.fecha_desde}
                td #{alergia.fecha_hasta}
                td #{alergia.importancia}