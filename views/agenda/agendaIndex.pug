doctype html
html
    head
        title Atención Médica
        link(rel="stylesheet" href="/css/agenda.css")
    body
        // Barra de Navegación
        nav.navbar
            ul
                li
                    a(href="/agenda") Agenda
                li
                    a(href="/pacientes") Pacientes
                li
                    a(href="/configuracion") Configuración
                li
                    a(href="/logout") Cerrar Sesión

        // Selección de Fecha
        form(action="/agenda/fecha" method="POST")
            .fecha-container
                label(for="fecha") Fecha:
                input(type="date" name="fecha" id="fecha" value=fechaSeleccionada) 
                button(type="submit") Buscar Turnos



        // Tabla de Turnos
        table.turnos
            thead
                tr
                    th Hora
                    th Paciente
                    th Motivo
                    th Estado
                    th Acción
            tbody
                each turno in turnos
                    tr
                        td #{turno.hora}
                        td #{turno.paciente}
                        td #{turno.motivo}
                        td #{turno.estado}
                        td
                            button Iniciar Atención

        // Incluir el archivo JS justo antes del cierre del body
        script(src="/js/main.js")
    </body>
